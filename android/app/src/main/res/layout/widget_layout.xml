<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Home Status"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/status_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Door: Checking..."
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/status_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Light: Checking..."
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/status_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="AC: Checking..."
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/status_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Temperature: --Â°C"
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/status_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Humidity: --%"
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"/>
    </LinearLayout>

</LinearLayout> 